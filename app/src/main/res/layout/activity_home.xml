<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen superior -->

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondohome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Inicio"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgHeader"
        app:layout_constraintEnd_toEndOf="@id/imgHeader"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="@id/imgHeader"
        app:layout_constraintTop_toTopOf="@id/imgHeader"
        app:layout_constraintVertical_bias="0.253" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:scaleType="centerCrop"
        android:contentDescription="Perfil"
        android:src="@drawable/fotoperfil1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="@id/imgHeader"
        app:layout_constraintTop_toTopOf="@id/imgHeader"
        app:shapeAppearanceOverlay="@style/CircleImage" />

    <TextView
        android:id="@+id/txtBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Hola"
        android:textColor="@color/plomo"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgHeader"
        app:layout_constraintEnd_toEndOf="@id/imgHeader"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="@id/imgHeader"
        app:layout_constraintTop_toTopOf="@id/imgHeader"
        app:layout_constraintVertical_bias="0.527" />

    <TextView
        android:id="@+id/txtBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Balancce Total"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgHeader"
        app:layout_constraintEnd_toEndOf="@id/imgHeader"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="@id/imgHeader"
        app:layout_constraintTop_toTopOf="@id/imgHeader"
        app:layout_constraintVertical_bias="0.647" />

    <TextView
        android:id="@+id/txtMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="$124.57"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgHeader"
        app:layout_constraintEnd_toEndOf="@id/imgHeader"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="@id/imgHeader"
        app:layout_constraintTop_toTopOf="@id/imgHeader"
        app:layout_constraintVertical_bias="0.911" />

    <ImageView
        android:id="@+id/imgNotifications"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/notificacion_icono"
        android:contentDescription="Notificaciones"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/imgHeader"
        app:layout_constraintEnd_toEndOf="@id/imgHeader"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- BOTÓN ENVIAR -->
    <LinearLayout
        android:id="@+id/btnSend"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/btn_secondary"
        android:foreground="@drawable/ripple_button"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAdd"
        app:layout_constraintTop_toBottomOf="@id/txtBalance"
        app:layout_constraintHorizontal_weight="1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icono_send"
            android:layout_marginEnd="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar Dinero"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- BOTÓN INGRESAR -->





    <LinearLayout
        android:id="@+id/btnAdd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/btn_primary"
        android:foreground="@drawable/ripple_button"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"

        app:layout_constraintStart_toEndOf="@id/btnSend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtBalance"
        app:layout_constraintHorizontal_weight="1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icono_respuesta"
            android:layout_marginEnd="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tituloTransacciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Últimas transacciones"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnSend"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tituloTransacciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ilustracion_transacciones"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay transacciones registradas!"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTransacciones"
        android:layout_width="429dp"
        android:layout_height="423dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloTransacciones" />

</androidx.constraintlayout.widget.ConstraintLayout>
